{
  "name": "@24vlh/ts-assert",
  "version": "1.0.3",
  "description": "Small footprint library that helps with typescript assertions.",
  "author": "@vlah.io",
  "license": "Apache-2.0",
  "keywords": [
    "typescript assertion",
    "typescript type assertion",
    "typescript type inferrence"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "index:refresh": "node ./.24vlh/scan.js",
    "lint": "npx eslint src/**/*.ts --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prettify": "npx prettier src/**/*.ts --write",
    "test": "npx jest --logHeapUsage"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-sonarjs": "^0.23.0",
    "husky": "^9.0.10",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
